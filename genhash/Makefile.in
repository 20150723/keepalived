EXEC = genhash
BIN  = ../bin
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@

CC = gcc
CFLAGS = @CFLAGS@ -Wall -Wunused -Wstrict-prototypes
LDFLAGS = @LIBS@ @LDFLAGS@

OBJS = main.o client.o common.o

all:	$(EXEC)
	strip $(BIN)/$(EXEC)
	@echo ""
	@echo "Make complete"

$(EXEC): $(OBJS)
	$(CC) $(OBJS) -o $(BIN)/$(EXEC) $(LDFLAGS)

clean:
	rm -f core *.o

distclean: clean
	rm -f Makefile

uninstall:
	rm -f $(bindir)/$(EXEC)

install:
	install -d $(bindir)
	install -m 755 $(BIN)/$(EXEC) $(bindir)/
